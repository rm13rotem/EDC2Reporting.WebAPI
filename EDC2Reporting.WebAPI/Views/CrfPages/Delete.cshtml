@model DataServices.SqlServerRepository.Models.CrfModels.CrfPage

@{
    ViewData["Title"] = "Delete CRF Page";
}

<h1>Delete CRF Page</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Study ID</dt>
        <dd class="col-sm-10">@Model.StudyId</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Locked</dt>
        <dd class="col-sm-10">@Model.IsLockedForChanges</dd>

        <dt class="col-sm-2">Deleted</dt>
        <dd class="col-sm-10">@Model.IsDeleted</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
