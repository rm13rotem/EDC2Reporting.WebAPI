@model DataServices.SqlServerRepository.Models.CrfModels.CrfPage

@{
    ViewData["Title"] = "CRF Page Details";
}

<h1>CRF Page Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Study ID</dt>
        <dd class="col-sm-10">@Model.StudyId</dd>

        <dt class="col-sm-2">HTML</dt>
        <dd class="col-sm-10">
            <pre>@Model.Html</pre>
        </dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Locked</dt>
        <dd class="col-sm-10">@Model.IsLockedForChanges</dd>

        <dt class="col-sm-2">Deleted</dt>
        <dd class="col-sm-10">@Model.IsDeleted</dd>

        <dt class="col-sm-2">Guid</dt>
        <dd class="col-sm-10">@Model.GuidId</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
