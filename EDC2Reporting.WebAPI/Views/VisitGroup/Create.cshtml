@model DataServices.SqlServerRepository.Models.VisitGroup.VisitGroup

@{
    ViewData["Title"] = "Create Visit Group";
}

<h2>Create Visit Group</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Select Visits</label>
        <select asp-items="ViewBag.Visits" name="selectedVisits" class="form-control" multiple="multiple"></select>
    </div>

    <button type="submit" class="btn btn-success">Save</button> |
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
