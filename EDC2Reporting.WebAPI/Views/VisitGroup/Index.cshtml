@model IEnumerable<DataServices.SqlServerRepository.Models.VisitGroup.VisitGroup>

@{
    ViewData["Title"] = "Visit Groups";
}

<h2>Visit Groups</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Visits</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @if (item.Visits != null)
                    {
                        foreach (var v in item.Visits)
                        {
                            <span class="badge bg-secondary">@v.Name</span>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
