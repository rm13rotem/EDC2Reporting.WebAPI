@model DataServices.SqlServerRepository.Models.VisitGroup.VisitGroup

@{
    ViewData["Title"] = "Delete Visit Group";
}

<h2>Delete Visit Group</h2>

<h4>Are you sure you want to delete this Visit Group?</h4>
<hr />

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Group Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Visits</dt>
        <dd class="col-sm-10">
            <textarea class="form-control" readonly rows="4">
@string.Join(", ", Model.Visits?.Select(v => v.Name) ?? Enumerable.Empty<string>())
            </textarea>
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
